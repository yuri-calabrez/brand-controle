{% extends "dashboard.twig" %}

{% block title %} CRM {% endblock %}

{% block content %}
    <div class="col-md-12">
        <a href="{{ path_for('dashboard.crm') }}" class="btn btn btn-default" title="Voltar"><i class="fa fa-arrow-left"></i> Voltar</a>
    </div>

    <div class="clearfix"></div>

    <article class="col-md-12 form_campanha">
        <h1 class="titulo_grafico">Criar nova Campanha</h1>
        <hr>
        <form method="post" action="{{ path_for('campanha.store') }}">
            <div class="col-md-6">
                <div class="form-group">
                    <label>*Filial</label>
                    <select name="FILIAL" class="form-control" required>
                        <option value="">Selecione uma filial</option>
                        <option value="Todas"{% if old.FILIAL == "Todas" %} selected {% endif %}>Todas as filiais</option>
                        {% for filial in filiais %}
                            <option value="{{ filial.FILIAL }}"{% if old.FILIAL == filial.FILIAL %} selected{% endif %}>{{ filial.FILIAL }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label>*Conceito</label>
                    <select name="CONCEITO" class="form-control" required>
                        <option value="">Selecione um conceito</option>
                        <option value="A" {% if old.CONCEITO == "A" %} selected{% endif %}>A</option>
                        <option value="B" {% if old.CONCEITO == "B" %} selected{% endif %}>B</option>
                        <option value="C" {% if old.CONCEITO == "C" %} selected{% endif %}>C</option>
                        <option value="D" {% if old.CONCEITO == "D" %} selected{% endif %}>D</option>
                        <option value="E" {% if old.CONCEITO == "E" %} selected{% endif %}>E</option>
                        <option value="F" {% if old.CONCEITO == "F" %} selected{% endif %}>F</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>*Data in√≠cio</label>
                        <input type="text" name="DT_INICIO" class="form-control format-date" required value="{{ old.DT_INICIO }}">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>*Data limite</label>
                        <input type="text" name="DT_LIMITE" class="form-control format-date" required value="{{ old.DT_LIMITE }}">
                    </div>
                </div>

                <div class="form-group">
                    <span class="titulo_label">*Tipo de desconto</span>
                    <label class="radio-inline">
                        <input type="radio" name="TIPO" class="radio-inline j_change" checked value="valor"/> Valor
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="TIPO" class="radio-inline j_change" value="percentual"/> Percentual
                    </label>
                </div>

                <div class="form-group">
                    <input type="text" name="VALOR" placeholder="Valor" class="form-control format-money" id="j_valor" value="{{ old.VALOR }}" required>
                    <input type="number" name="PERCENTUAL" placeholder="Percentual" min="0" class="form-control none" id="j_percentual" value="{{ old.PERCENTUAL }}"> 
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="text-center">
                <input type="hidden" name="MARCA" value="{{ user.NOME }}">
                <input type="submit" value="Criar Campanha" class="btn btn-primary"/>
            </div>
        </form>
    </article>
{% endblock %}    
